<%- include("partials/header") -%>

<div id="signup" class="main">
    <h2 class="mb-3">Sign Up</h2>
  <form action="/signup" method="post">
    <div class="form-group">
      <input
        class="form-control"
        type="email"
        name="username"
        placeholder="Enter Email"
      />
    </div>
    <div class="form-group">
      <input  class="form-control" type="password" name="password" placeholder="Enter Password" />
    </div>

    <button class="btn btn-light btn-lg btn-block">Sign Up</button>
  </form>
  <p class="mt-3">Or</p>
  <a class="btn btn-lg btn-block cta mb-3" href="/auth/google">Sign Up with &nbsp;<i class="fa-brands fa-google"></i></a>

  <a href="/login" class="red-link">Already Have an Account ?</a>
</div>

<%- include("partials/footer") -%>
